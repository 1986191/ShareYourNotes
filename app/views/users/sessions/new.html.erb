<div class="container d-flex align-items-center justify-content-center text-center login-bg">
  <div class="row w-50 p-5">

    <h1 class="cedarville-cursive-regular mb-5">ShareYourNotes</h1>

    <h2 class="mb-3 text-primary">LOG IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="login_form d-flex my-4">
        <div class="align-middle m-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
          </svg>
        </div>
        <%= f.email_field :email, placeholder:"Email", autocomplete: "email", autofocus: true, class:"text-muted bg-transparent w-100 border-0 m-2" %>
      </div>

      <div class="login_form d-flex my-4">
        <div class="align-middle m-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
            <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8m4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5"/>
            <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
          </svg>
        </div>
        <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password", class:"text-muted bg-transparent w-100 border-0 m-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field d-flex">
          <%= f.check_box :remember_me, class:"m-2" %>
          <%= f.label :remember_me, class:"my-2" %>
        </div>
      <% end %>

      <hr class="border-0 my-3" />

      <div class="row d-flex m-0 p-0 justify-content-center">
        <%= f.submit "Log In", class: "btn btn-outline-primary w-100 my-2" %>
      </div>

    <% end %>

    <%= render "users/shared/links" %>

    <% form_tag('/auth/developer', method: 'post', data: {turbo: false}) do%>

    <!--<button type='submit'>Login with Developer</button>-->
    
    <% end %>
  
  </div>
</div>
